<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        >

        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/thumbnail" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rowDetails"
            android:layout_below="@id/imageIv"
            android:layout_margin="@dimen/activity_vertical_margin"
            >

            <View android:id="@+id/hiddenView"
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Title"
                android:textColor="@color/textBlack"
                android:textSize="22sp"
                android:layout_below="@id/hiddenView"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_toStartOf="@id/descriptionTv"
                android:layout_toLeftOf="@id/descriptionTv"
                android:background="@drawable/dotted_line"
                android:layerType="software"
                android:src="@drawable/stoke_line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionTv"
                android:text="description"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/textBlack"
                android:layout_below="@id/hiddenView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />
            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTv"
                android:numStars="5"
                android:progressTint="@color/yellow"
                android:progressBackgroundTint="@color/yellow"
                android:stepSize="0.5"
                android:layout_margin="3dp"
                />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>